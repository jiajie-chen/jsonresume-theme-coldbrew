{
    "author": "Jiajie Chen",
    "name": "@jiajie-chen/jsonresume-theme-coldbrew",
    "description": "Caffeine theme for JSON Resume, modified for my personal use.",
    "version": "0.1.0",
    "type": "module",
    "keywords": [
        "json",
        "resume",
        "jsonresume",
        "json-resume"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/jiajie-chen/jsonresume-theme-coldbrew"
    },
    "license": "MIT",
    "module": "./dist/main.js",
    "exports": {
        ".": {
            "import": "./dist/main.js"
        }
    },
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "lint:es": "eslint --ext .ts,tsx --ignore-path .gitignore .",
        "lint:style": "stylelint src/**/*.{css,scss}",
        "lint:all": "npm run lint:es || npm run lint:style",
        "format:all": "prettier -w -u .",
        "type-gen": "node ./scripts/type-gen.cjs"
    },
    "//": "// TODO: husky",
    "devDependencies": {
        "@preact/preset-vite": "^2.5.0",
        "@types/luxon": "^3.2.0",
        "@typescript-eslint/eslint-plugin": "^5.54.0",
        "@typescript-eslint/parser": "^5.54.0",
        "eslint": "^8.35.0",
        "eslint-config-preact": "^1.3.0",
        "eslint-config-prettier": "^8.6.0",
        "json-schema-to-typescript": "^12.0.0",
        "prettier": "^2.8.4",
        "resume-schema": "^1.0.0",
        "resumed": "^3.0.1",
        "sass": "^1.58.3",
        "stylelint": "^15.2.0",
        "stylelint-config-standard": "^30.0.1",
        "stylelint-config-standard-scss": "^7.0.1",
        "typescript": "^4.9.5",
        "vite": "^4.1.4"
    },
    "dependencies": {
        "@shopify/address": "^4.0.6",
        "luxon": "^3.2.1",
        "preact": "^10.13.0",
        "preact-render-to-string": "^5.2.6"
    },
    "eslintConfig": {
        "root": true,
        "plugins": [
            "@typescript-eslint"
        ],
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended",
            "preact",
            "prettier"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "ecmaFeatures": {
                "jsx": true
            },
            "ecmaVersion": "latest",
            "sourceType": "module"
        },
        "rules": {
            "jest/no-deprecated-functions": 0
        }
    },
    "stylelint": {
        "extends": [
            "stylelint-config-standard",
            "stylelint-config-standard-scss"
        ]
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    }
}
